<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.tnine.myapplication.selectionMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="183dp"
        android:background="#01579B"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set a simple Location Alarm"
        android:gravity="center"
        android:id="@+id/settingsText1"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="183dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a favorite Destination"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#01579B"
        android:layout_margin="2dp"
        android:id="@+id/settingsText2"
        android:layout_below="@+id/settingsText1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:layout_height="183dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sound settings"
        android:background="#01579B"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/settingsText3"
        android:layout_below="@+id/settingsText2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/settingsText2" />
</RelativeLayout>
